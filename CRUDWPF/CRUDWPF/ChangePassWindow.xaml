<Window x:Class="CRUDWPF.ChangePassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUDWPF"
        mc:Ignorable="d"
        Title="ChangePassWindow" Height="450" Width="450" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label Content="Change Password" HorizontalAlignment="Left" Margin="40,31,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="118,121,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Txt_Pass" HorizontalAlignment="Left" Margin="118,151,0,0" VerticalAlignment="Top" Width="146" PreviewTextInput="Txt_Pass_PreviewTextInput"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="178,191,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click" />
    </Grid>
</Window>
