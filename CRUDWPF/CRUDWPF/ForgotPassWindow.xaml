<Window x:Class="CRUDWPF.ForgotPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUDWPF"
        mc:Ignorable="d"
        Title="ForgotPassWindow" Height="450" Width="450" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label Content="Forgot Password" HorizontalAlignment="Left" Margin="40,31,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="Txt_email" HorizontalAlignment="Left" Height="23" Margin="118,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" PreviewTextInput="Txt_email_PreviewTextInput"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="118,134,0,0" VerticalAlignment="Top"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="178,191,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click" />

    </Grid>
</Window>
